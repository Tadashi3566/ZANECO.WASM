@page "/users/self-register"

@attribute [AllowAnonymous]

@inject IStringLocalizer<SelfRegister> L
@inject IStringLocalizer<SharedResource> LS

<EditForm Model="@_createUserRequest" OnValidSubmit="SubmitAsync">
    <MudCard Elevation="@_preference.Elevation">
        <MudCardHeader>
            <CardHeaderContent>
                <MudTooltip Text="Go Back">
                    <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" Color="Color.Inherit" Edge="Edge.Start"
                                   Href="/" />
                </MudTooltip>
                <div class="d-flex justify-center">
                    <img src="zaneco-logo.png" Style="height:120px" />
                </div>
                <div class="fsh-center-text">
                    <MudText Typo="Typo.h4" GutterBottom="true" style="margin-bottom:5px">
                        @L["New User Registration"]
                    </MudText>
                    <MudText>@L["Enter your details below to set up your new account"]</MudText>
                </div>
                <br />
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid>
                <DataAnnotationsValidator />
                <CustomValidation @ref="_customValidation" />
                <MudItem xs="12" md="6">
                    <MudTextField T="string" Label="Tenant Name" @bind-Value="Tenant" For="@(() => Tenant)" Required
                                  Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Storefront"
                                  InputType="InputType.Text"
                                  Variant="Variant.Outlined" ReadOnly />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" Label="User Name"
                                  @bind-Value="_createUserRequest.UserName" For="@(() => _createUserRequest.UserName)"
                                  Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.VerifiedUser"
                                  InputType="InputType.Text"
                                  Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField T="string" Label="E-mail" @bind-Value="_createUserRequest.Email" For="@(() => _createUserRequest.Email)"
                                  Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.AlternateEmail"
                                  InputType="InputType.Email"
                                  Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField T="string" Label="Phone Number" 
                                  @bind-Value="_createUserRequest.PhoneNumber" For="@(() => _createUserRequest.PhoneNumber)"
                                  Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Phone"
                                  InputType="InputType.Telephone"
                                  Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" Label="First Name" 
                                  @bind-Value="_createUserRequest.FirstName" For="@(() => _createUserRequest.FirstName)"
                                  Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Abc"
                                  InputType="InputType.Text"
                                  Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" Label="Last Name" 
                                  @bind-Value="_createUserRequest.LastName" For="@(() => _createUserRequest.LastName)"
                                  Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Abc"
                                  InputType="InputType.Text"
                                  Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudTextField Label="@L["Password"]"
                                  @bind-Value="_createUserRequest.Password" For="@(() => _createUserRequest.Password)"
                                  Adornment="Adornment.End" AdornmentIcon="@_passwordInputIcon" OnAdornmentClick="TogglePasswordVisibility"
                                  InputType="@_passwordInput"
                                  Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField Label="@L["Confirm Password"]" 
                                  @bind-Value="_createUserRequest.ConfirmPassword" For="@(() => _createUserRequest.ConfirmPassword)"
                                  Adornment="Adornment.End" AdornmentIcon="@_passwordInputIcon" OnAdornmentClick="TogglePasswordVisibility"
                                  InputType="@_passwordInput"
                                  Variant="Variant.Outlined" />
                </MudItem>
            </MudGrid>
        </MudCardContent>
        <MudCardActions Class="pb-4 pl-4">
            <MudButton StartIcon="@Icons.Material.Filled.AppRegistration" Variant="Variant.Filled" Color="Color.Primary" ButtonType="ButtonType.Submit" Disabled="BusySubmitting" Class="ml-auto">
                @L["Register"]
            </MudButton>
        </MudCardActions>
    </MudCard>
</EditForm>