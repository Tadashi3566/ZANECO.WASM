@page "/survey/ratings"
@attribute [MustHavePermission(FSHAction.View, FSHResource.Rating)]

<FshTitle Title="Ratings" Description="Manage Ratings" />

<EntityTable @ref="_table" TEntity="RatingDto" TId="Guid" TRequest="RatingUpdateRequest" Context="@Context">
    <EditFormContent>
        <MudItem xs="12">
            <MudRating Size="Size.Large" @bind-SelectedValue="context.RateNumber" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField Label="Comment" For="@(() => context.Comment)" @bind-Value="context.Comment" Lines="5" />
        </MudItem>

        @if (context.Id != Guid.Empty)
        {
            <MudItem xs="12">
                <MudTextField Label="Description" For="@(() => context.Description)" @bind-Value="context.Description" />
            </MudItem>
            <MudItem xs="12">
                <MudTextField Label="Notes" For="@(() => context.Notes)" @bind-Value="context.Notes" />
            </MudItem>
        }
        
    </EditFormContent>

</EntityTable>