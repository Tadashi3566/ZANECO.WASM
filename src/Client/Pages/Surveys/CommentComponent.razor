<EditForm Model="@_model" OnValidSubmit="Submit">
    <DataAnnotationsValidator />
    <CustomValidation @ref="_customValidation" />
    <MudCard>
        <MudCardHeader>
            <MudText>How would you like to rate our services?</MudText>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid>
                <MudStack AlignItems="AlignItems.Center">
                    <MudItem xs="12" sm="6">
                        <MudRating @bind-SelectedValue="_model.RateNumber" MaxValue="5" Size="Size.Large" HoveredValueChanged="@(() => SetRateName(_model.RateNumber))" />
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudText Typo="Typo.h5">@_rateName</MudText>
                    </MudItem>
                </MudStack>
                
                <MudItem xs="12">
                    <MudTextField Label="Input Comment or Rating Survey" @bind-Value="_model.Comment" For="@(() => _model.Comment)" Lines="5" Variant="Variant.Filled" />
                </MudItem>
            </MudGrid>
        </MudCardContent>
        <MudCardActions>
            <MudItem Class="ma-2">
                <MudButton Color="Color.Primary" Class="ml-auto" Size="Size.Large" StartIcon="@Icons.Filled.Send" Variant="Variant.Filled"
                           ButtonType="ButtonType.Submit">Submit</MudButton>
            </MudItem>
        </MudCardActions>
    </MudCard>
    
</EditForm>
