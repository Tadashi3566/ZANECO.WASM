@page "/payroll/employeeadjustments"
@page "/payroll/employeeadjustments/{EmployeeId:guid}"

@attribute [MustHavePermission(FSHAction.View, FSHResource.EmployeeAdjustments)]

<FshTitle Title="Employee Adjustments" Description="Employee Adjustment Management" />

<EntityTable @ref="_table" TEntity="EmployeeAdjustmentDto" TId="Guid" TRequest="EmployeeAdjustmentUpdateRequest" Context="@Context">
    <AdvancedSearchContent>
        <MudItem Class="mt-3">
            <AutocompleteEmployee @bind-Value="SearchEmployeeId" />
        </MudItem>
    </AdvancedSearchContent>

    <EditFormContent>
        <MudItem xs="12">
            <AutocompleteEmployee For="@(() => context.EmployeeId)" @bind-Value="SearchEmployeeId" Disabled="!SearchEmployeeId.Equals(Guid.Empty)" />
        </MudItem>

        <MudItem xs="12" sm="9">
            <ZANECO.WASM.Client.Pages.HR.PayrollManager.Adjustments.AutocompleteAdjustment Label="Name" For="@(() => context.Name)" @bind-Value="context.Name" />
        </MudItem>

        <MudItem xs="12" sm="3">
            <MudNumericField Label="Amount" For="@(() => context.Amount)" @bind-Value="context.Amount" Format="N2" />
        </MudItem>

        <MudItem xs="12">
            <MudTextField Label="Description" For="@(() => context.Description)" @bind-Value="context.Description" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField Label="Notes" For="@(() => context.Notes)" @bind-Value="context.Notes" />
        </MudItem>
        
    </EditFormContent>

</EntityTable>