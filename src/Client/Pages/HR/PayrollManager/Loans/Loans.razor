@page "/payroll/loans"
@page "/payroll/loans/{EmployeeId:guid}"

@attribute [MustHavePermission(FSHAction.View, FSHResource.Payroll)]

<FshTitle Title="Employee Payroll Details" Description="Employee Payroll Detail Management" />

<EntityTable @ref="_table" TEntity="LoanDto" TId="Guid" TRequest="LoanUpdateRequest" Context="@Context">
    <AdvancedSearchContent>
        <MudItem Class="mt-3">
            <AutocompleteEmployee @bind-Value="SearchEmployeeId" />
        </MudItem>
    </AdvancedSearchContent>

    <EditFormContent>
        <MudItem xs="12">
            <AutocompleteEmployee For="@(() => context.EmployeeId)" @bind-Value="SearchEmployeeId" Disabled="!SearchEmployeeId.Equals(Guid.Empty)" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <AutocompleteAdjustments For="@(() => context.AdjustmentId)" @bind-Value="context.AdjustmentId" />
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudNumericField Label="Amount" For="@(() => context.Amount)" @bind-Value="context.Amount" Format="N2" />
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudSelect Label="Payment Schedule" For="@(() => context.PaymentSchedule)" @bind-Value="context.PaymentSchedule">
                <MudSelectItem Value="@("PAYROLL")" />
                <MudSelectItem Value="@("MONTHLY")" />
            </MudSelect>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudDatePicker Label="Date Released" For="@(() => context.DateReleased)" @bind-Date="context.DateReleased" DateFormat="MMMM dd, yyyy" />
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudDatePicker Label="Start" For="@(() => context.DateStart)" @bind-Date="context.DateStart" PickerClosed="(() => SetDateEnd(context.PaymentSchedule, context.Amount, context.DateStart, context.Months))" DateFormat="MMMM dd, yyyy" />
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudNumericField Label="Months" For="@(() => context.Months)" @bind-Value="context.Months" OnBlur="(() => SetDateEnd(context.PaymentSchedule, context.Amount, context.DateStart, context.Months))" />
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudDatePicker Label="End" For="@(() => context.DateEnd)" @bind-Date="@_dtend" DateFormat="MMMM dd, yyyy" ReadOnly=true Variant="Variant.Outlined" />
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudNumericField Label="Ammortization" For="@(() => context.Ammortization)" @bind-Value="@_ammortization" Format="N2" ReadOnly=true Variant="Variant.Outlined" />
        </MudItem>

        <MudItem xs="12">
            <MudTextField Label="Description" For="@(() => context.Description)" @bind-Value="context.Description" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField Label="Notes" For="@(() => context.Notes)" @bind-Value="context.Notes" />
        </MudItem>
        
    </EditFormContent>

</EntityTable>