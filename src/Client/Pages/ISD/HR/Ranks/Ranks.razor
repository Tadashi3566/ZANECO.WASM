@page "/payroll/ranks"
@attribute [MustHavePermission(FSHAction.View, FSHResource.Payroll)]

<FshTitle Title="Ranks" Description="Manage Ranks" />

<EntityTable @bind-SearchString="_searchString" @ref="_table" TEntity="RankDto" TId="Guid" TRequest="RankUpdateRequest" Context="@Context">

    <EditFormContent>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudNumericField Label="Number" For="@(() => context.Number)" @bind-Value="context.Number" Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField Label="Name" For="@(() => context.Name)" @bind-Value="context.Name" Variant="Variant.Filled" />
        </MudItem>

        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudNumericField Label="Amount" For="@(() => context.Amount)" @bind-Value="context.Amount" Format="N2" Variant="Variant.Filled" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudNumericField Label="Step Increment" For="@(() => context.Step)" @bind-Value="context.Step" Format="N2" Variant="Variant.Filled" />
        </MudItem>

        <MudItem xs="12">
            <MudTextField Label="Description" For="@(() => context.Description)" @bind-Value="context.Description" Lines="2"/>
        </MudItem>
        <MudItem xs="12">
            <MudTextField Label="Notes" For="@(() => context.Notes)" @bind-Value="context.Notes" Lines="3"/>
        </MudItem>
    </EditFormContent>

</EntityTable>

@code
{
    private RenderFragment<RankDto> TemplateDescriptionNotes => context => __builder =>
    {
        <MudItem Class="d-flex flex-column">
            <MudText Typo="Typo.subtitle2">
                <MudHighlighter Text="@context.Description" HighlightedText="@_searchString" />
            </MudText>
            <MudText Typo="Typo.caption">
                <MudHighlighter Text="@context.Notes" HighlightedText="@_searchString" />
            </MudText>
        </MudItem>
    };
}