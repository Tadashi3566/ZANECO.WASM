@page "/payroll/employeeadjustments"
@page "/payroll/employeeadjustments/{EmployeeId:guid}"

@attribute [MustHavePermission(FSHAction.View, FSHResource.Payroll)]

<FshTitle Title="Employee Adjustments" Description="Employee Adjustment Management" />

<EntityTable @bind-SearchString="_searchString" @ref="_table" TEntity="EmployeeAdjustmentDto" TId="Guid" TRequest="EmployeeAdjustmentUpdateRequest" Context="@Context">
    <AdvancedSearchContent>
        <MudItem Class="mt-3">
            <AutocompleteEmployee @bind-Value="SearchEmployeeId" />
        </MudItem>
    </AdvancedSearchContent>

    <EditFormContent>
        <MudItem xs="12">
            <AutocompleteEmployee For="@(() => context.EmployeeId)" @bind-Value="SearchEmployeeId" Disabled="!SearchEmployeeId.Equals(Guid.Empty)" />
        </MudItem>

        <MudItem xs="12" sm="9">
            <ZANECO.WASM.Client.Pages.ISD.HR.PayrollManager.Adjustments.AutocompleteAdjustment Label="Name" For="@(() => context.Name)" @bind-Value="context.Name" />
        </MudItem>

        <MudItem xs="12" sm="3">
            <MudNumericField Label="Amount" For="@(() => context.Amount)" @bind-Value="context.Amount" Format="N2" Variant="Variant.Filled" />
        </MudItem>

        <MudItem xs="12">
            <MudTextField Label="Description" For="@(() => context.Description)" @bind-Value="context.Description" Lines="1" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField Label="Notes" For="@(() => context.Notes)" @bind-Value="context.Notes" Lines="2" />
        </MudItem>
        
    </EditFormContent>

</EntityTable>

@code
{
    private RenderFragment<EmployeeAdjustmentDto> TemplateDescriptionNotes => context => __builder =>
    {
        <MudItem Class="d-flex flex-column">
            <MudText Typo="Typo.subtitle2">
                <MudHighlighter Text="@context.Description" HighlightedText="@_searchString" />
            </MudText>
            <MudText Typo="Typo.caption">
                <MudHighlighter Text="@context.Notes" HighlightedText="@_searchString" />
            </MudText>
        </MudItem>
    };
}