@page "/cad/Routes"
@attribute [MustHavePermission(FSHAction.View, FSHResource.CAD)]

<FshTitle Title="Routes" Description="Manage Routes" />

<EntityTable @ref="_table" TEntity="RouteDto" TId="Guid" TRequest="RouteUpdateRequest" Context="@Context">
    <EditFormContent>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <AutocompleteArea For="@(() => context.AreaId)" @bind-Value="context.AreaId" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudTextField Label="Number" For="@(() => context.Number)" @bind-Value="context.Number" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudTextField Label="Code" For="@(() => context.Code)" @bind-Value="context.Code" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField Label="Name" For="@(() => context.Name)" @bind-Value="context.Name" />
        </MudItem>

        <MudItem xs="12">
            <MudTextField Label="Description" For="@(() => context.Description)" @bind-Value="context.Description" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField Label="Notes" For="@(() => context.Notes)" @bind-Value="context.Notes" />
        </MudItem>
    </EditFormContent>

</EntityTable>