    <EditFormContent>
        <MudItem xs="6" sm="3">
            <MudAutocomplete T="string" Label="Bill Month" For="@(() => context.BillMonth)" @bind-Value="context.BillMonth" SearchFunc="SearchBillMonth" />
        </MudItem>

        @*<MudItem xs="12">
            <PowerSupplierAutocomplete For="@(() => context.GroupId)" @bind-Value="SearchBillMonth" Disabled="!SearchBillMonth.Equals(Guid.Empty)" />
        </MudItem>*@

