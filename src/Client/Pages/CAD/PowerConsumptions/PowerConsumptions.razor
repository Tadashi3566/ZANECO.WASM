            <MudNumericField Label="KWH Purchased" For="@(() => context.KwhPurchased)" @bind-Value="context.KwhPurchased" />
        </MudItem>

        <MudItem xs="12">
            <MudTextField Label="Description" For="@(() => context.Description)" @bind-Value="context.Description" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField Label="Notes" For="@(() => context.Notes)" @bind-Value="context.Notes" />
        </MudItem>
    </EditFormContent>

</EntityTable>