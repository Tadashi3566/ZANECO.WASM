<EntityTable @ref="_table" TEntity="PowerConsumptionDto" TId="Guid" TRequest="PowerConsumptionUpdateRequest" Context="@Context">
    <AdvancedSearchContent>
        <MudItem Class="mt-3">
            @*<MudAutocomplete T="string" Label="Bill Month" For="@(() => context.BillMonth)" @bind-Value="context.BillMonth" SearchFunc="SearchBillMonth" />*@
        </MudItem>
