<PersonCard Style="background-color: var(--mud-palette-drawer-background);color: var(--mud-palette-drawer-text); margin-bottom:0px!important" />
<MudNavMenu>
    @*<MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">Start</MudText>*@
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
    <MudNavLink Href="https://www.zaneco.ph/" Match="NavLinkMatch.All" Target="_blank"
        Icon="@Icons.Material.Filled.Web">Visit our Website</MudNavLink>
    @if (_canViewHangfire)
    {
        <MudNavLink Href="@_hangfireUrl" Match="NavLinkMatch.All" Target="_blank" Icon="@Icons.Material.Filled.Work">Hangfire</MudNavLink>
    }
    <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">Personal</MudText>
    @if (_canViewDashboard)
    {
        @*<MudNavLink Href="/calendar" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.CalendarMonth">Calendar</MudNavLink>*@
        <MudNavLink Href="/dashboard" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
    }
    @if (_canCreateAttendance)
    {
        <MudNavLink Href="/employee/timelogs" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.CameraFront">Time Log-In/Out</MudNavLink>
    }
    
    <MudNavLink Href="/account" Icon="@Icons.Material.Filled.ManageAccounts">Account</MudNavLink>
    <MudNavLink Href="/audit-logs" Icon="@Icons.Material.Filled.SecurityUpdateGood">Logs</MudNavLink>

    <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">Management</MudText>

    @if (_canViewGroups || _canViewTickets)
    {
        <MudNavGroup Title="Application" Icon="@Icons.Material.Filled.AddBox">
            @if (_canViewGroups)
            {
                <MudNavLink Href="app/groups" Icon="@Icons.Material.Filled.Settings" Class="fsh-nav-child">Groups</MudNavLink>
            }
            @if (_canViewTickets)
            {
                <MudNavLink Href="app/tickets" Icon="@Icons.Material.Filled.AirplaneTicket" Class="fsh-nav-child">Tickets</MudNavLink>
            }
        </MudNavGroup>
    }
    @if (_canViewContacts || _canViewSMS)
    {
        <MudNavGroup Title="Messages" Icon="@Icons.Material.Filled.AddBox">
            @if (_canViewContacts)
            {
                <MudNavLink Href="sms/contacts" Icon="@Icons.Material.Filled.ContactPhone" Class="fsh-nav-child">Contacts</MudNavLink>
            }
            @if (_canViewSMS)
            {
                <MudNavLink Href="sms/templates" Icon="@Icons.Material.Filled.Message" Class="fsh-nav-child">Templates</MudNavLink>
                <MudNavLink Href="sms/outs" Icon="@Icons.Material.Filled.Send" Class="fsh-nav-child">Send</MudNavLink>
                <MudNavLink Href="sms/inbox" Icon="@Icons.Material.Filled.Inbox" Class="fsh-nav-child">Inbox</MudNavLink>
                <MudNavLink Href="sms/agma" Icon="@Icons.Material.Filled.AppRegistration" Class="fsh-nav-child">AGMA</MudNavLink>
                <MudNavLink Href="sms/logs" Icon="@Icons.Material.Filled.Outbox" Class="fsh-nav-child">Outbox</MudNavLink>
            }
        </MudNavGroup>
    }
    
    @if (_canViewEmployees || _canViewAttendance || _canViewCalendar || _canViewDocuments)
    {
        <MudNavGroup Title="Human Resource" Icon="@Icons.Material.Filled.AddBox" >
            <MudNavLink Href="/hr/employees" Icon="@Icons.Material.Filled.Groups" Class="fsh-nav-child" Disabled=(!_canViewEmployees)>Employees</MudNavLink>
            <MudDivider />
            <MudNavLink Href="/hr/calendar" Icon="@Icons.Material.Filled.CalendarViewMonth" Class="fsh-nav-child">Calendar</MudNavLink>
            <MudNavLink Href="/employee/appointments" Icon="@Icons.Material.Filled.Schedule" Class="fsh-nav-child">Appointments</MudNavLink>
            <MudNavLink Href="/employee/attendance" Icon="@Icons.Material.Filled.EventAvailable" Class="fsh-nav-child">Attendance</MudNavLink>
            <MudNavLink Href="/employee/timelogs" Icon="@Icons.Material.Filled.CameraFront" Class="fsh-nav-child">Time Log-In/Out</MudNavLink>
            <MudDivider />
            <MudNavLink Href="/hr/documents" Icon="@Icons.Material.Filled.DocumentScanner" Class="fsh-nav-child" Disabled="!_canViewDocuments">Documents</MudNavLink>
            <MudNavLink Href="/hr/powerbills" Icon="@Icons.Material.Filled.ReceiptLong" Class="fsh-nav-child" Disabled=!_canViewEmployees>Power Bills</MudNavLink>
        </MudNavGroup>
    }

    @if (_canViewPayroll)
    {
        <MudNavGroup Title="Payroll" Icon="@Icons.Material.Filled.AddBox">
            <MudNavLink Href="/payroll/adjustments" Icon="@Icons.Material.Filled.Settings" Class="fsh-nav-child">Adjustments</MudNavLink>
            <MudNavLink Href="/payroll/contributions" Icon="@Icons.Material.Filled.ReceiptLong" Class="fsh-nav-child">Contributions</MudNavLink>
            <MudNavLink Href="/payroll/salaries" Icon="@Icons.Material.Filled.LocalPolice" Class="fsh-nav-child">Salaries</MudNavLink>
            <MudDivider />
            <MudNavLink Href="/payroll/schedules" Icon="@Icons.Material.Filled.CalendarViewMonth" Class="fsh-nav-child">Schedules</MudNavLink>
            <MudNavLink Href="/payroll/scheduledetails" Icon="@Icons.Material.Filled.CalendarViewWeek" Class="fsh-nav-child">Schedule Details</MudNavLink>
            <MudDivider />
            <MudNavLink Href="/payroll/loans" Icon="@Icons.Material.Filled.ManageAccounts" Class="fsh-nav-child">Employee Loans</MudNavLink>
            <MudNavLink Href="/payroll/employeeadjustments" Icon="@Icons.Material.Filled.ManageAccounts" Class="fsh-nav-child">Employee Adjustments</MudNavLink>

            <MudNavLink Href="/payroll" Icon="@Icons.Material.Filled.Payment" Class="fsh-nav-child">Payroll</MudNavLink>
            <MudNavLink Href="/payroll/employeepayroll" Icon="@Icons.Material.Filled.Payment" Class="fsh-nav-child">Employee Payroll</MudNavLink>
        </MudNavGroup>
    }

    @if (_canViewAccounting)
    {
        <MudNavGroup Title="Accounting" Icon="@Icons.Material.Filled.AddBox">
            @if (_canViewAccounting)
            {
                <MudNavLink Href="/accounting/Accounts" Icon="@Icons.Material.Filled.Groups" Class="fsh-nav-child">Accounts</MudNavLink>
                <MudNavLink Href="/accounting/checks" Icon="@Icons.Material.Filled.Groups" Class="fsh-nav-child">Checks</MudNavLink>

                <MudNavLink Href="/accounting/vouchers" Icon="@Icons.Material.Filled.PersonSearch" Class="fsh-nav-child">Vouchers</MudNavLink>
                <MudNavLink Href="/accounting/journals" Icon="@Icons.Material.Filled.EventAvailable" Class="fsh-nav-child">Journals</MudNavLink>
                <MudNavLink Href="/accounting/trialbalance" Icon="@Icons.Material.Filled.Payment" Class="fsh-nav-child">Trial Balance</MudNavLink>
            }
        </MudNavGroup>
    }

    @if (_canViewISD)
    {
        <MudNavGroup Title="ISD" Icon="@Icons.Material.Filled.AddBox">
            @if (_canViewISD)
            {
                <MudNavLink Href="/isd/members" Icon="@Icons.Material.Filled.Groups" Class="fsh-nav-child">Members</MudNavLink>
            }
        </MudNavGroup>
    }

    @if (_canViewCAD)
    {
        <MudNavGroup Title="CAD" Icon="@Icons.Material.Filled.AddBox">
            @if (_canViewCAD)
            {
                <MudNavLink Href="/cad/areas" Icon="@Icons.Material.Filled.Place" Class="fsh-nav-child">Areas</MudNavLink>
                <MudNavLink Href="/cad/barangays" Icon="@Icons.Material.Filled.Place" Class="fsh-nav-child">Barangays</MudNavLink>
                <MudNavLink Href="/cad/routes" Icon="@Icons.Material.Filled.AltRoute" Class="fsh-nav-child">Routes</MudNavLink>

                <MudNavLink Href="/cad/powerrates" Icon="@Icons.Material.Filled.Power" Class="fsh-nav-child">Power Rates</MudNavLink>
                <MudNavLink Href="/cad/powerconsumptions" Icon="@Icons.Material.Filled.Power" Class="fsh-nav-child">Power Consumptions</MudNavLink>

                <MudNavLink Href="/cad/accounts" Icon="@Icons.Material.Filled.Groups" Class="fsh-nav-child">Accounts</MudNavLink>
                <MudNavLink Href="/cad/ledger" Icon="@Icons.Material.Filled.FormatListBulleted" Class="fsh-nav-child">Ledger</MudNavLink>

                <MudNavLink Href="/cad/remotecollections" Icon="@Icons.Material.Filled.Payment" Class="fsh-nav-child">Remote Collections</MudNavLink>
            }
        </MudNavGroup>
    }

    @if (_canCreateComment || _canViewRating || _canViewSurveys)
    {
        <MudNavGroup Title="Survey" Icon="@Icons.Material.Filled.AddBox">
            @if (_canViewRating)
            {
                <MudNavLink Href="/survey/rates" Icon="@Icons.Material.Filled.StarRate" Class="fsh-nav-child">Rates</MudNavLink>
                <MudNavLink Href="/survey/ratingtemplates" Icon="@Icons.Material.Filled.HotelClass" Class="fsh-nav-child">Templates</MudNavLink>
            }
            @if (_canCreateComment)
            {
                <MudNavLink Href="/survey/comment" Icon="@Icons.Material.Filled.StarHalf" Class="fsh-nav-child">Comment</MudNavLink>
            }
            @if (_canViewSurveys)
            {
                <MudNavLink Href="/survey/ratings" Icon="@Icons.Material.Filled.StarHalf" Class="fsh-nav-child">Surveys</MudNavLink>
            }
        </MudNavGroup>
    }

    @if (_canViewRaffle)
    {
        <MudNavGroup Title="Raffle" Icon="@Icons.Material.Filled.AddBox">
            @if (_canViewRaffle)
            {
                <MudNavLink Href="/raffle/profiles" Icon="@Icons.Material.Filled.Style" Class="fsh-nav-child">Profiles</MudNavLink>
                <MudNavLink Href="/raffle/prizes" Icon="@Icons.Material.Filled.Interests" Class="fsh-nav-child">Prizes</MudNavLink>
                <MudNavLink Href="/raffle/winners" Icon="@Icons.Material.Filled.FamilyRestroom" Class="fsh-nav-child">Winners</MudNavLink>
            }
        </MudNavGroup>
    }

    @if (_canViewBrands || _canViewProducts)
    {
        <MudNavGroup Title="Sandurot" Icon="@Icons.Material.Filled.AddBox">
            <MudNavLink Href="/sandurot/brands" Icon="@Icons.Material.Filled.ShoppingBag" Class="fsh-nav-child" Disabled="!_canViewBrands">
                Brands
            </MudNavLink>
            <MudNavLink Href="/sandurot/products" Icon="@Icons.Material.Filled.ShoppingBag" Class="fsh-nav-child" Disabled="!_canViewProducts">
                Products
            </MudNavLink>
        </MudNavGroup>
    }

    @if (CanViewAdministrationGroup)
    {
        <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">Administration</MudText>
        @if (_canViewUsers)
        {
            <MudNavLink Match="NavLinkMatch.Prefix" Href="/users" Icon="@Icons.Material.Filled.PeopleAlt">Users</MudNavLink>
        }
        @if (_canViewRoles)
        {
            <MudNavLink Href="/roles" Icon="@Icons.Material.Filled.EmojiPeople">Roles</MudNavLink>
        }
        @if(_canViewTenants)
        {
            <MudNavLink Href="/tenants" Icon="@Icons.Material.Filled.GroupWork" Disabled="!_canViewTenants">Tenants</MudNavLink>
        }
    }
</MudNavMenu>