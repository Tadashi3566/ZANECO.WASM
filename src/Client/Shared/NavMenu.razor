<PersonCard Style="background-color: var(--mud-palette-drawer-background);color: var(--mud-palette-drawer-text); margin-bottom:0px!important" />
<MudNavMenu>
    @*<MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">Start</MudText>*@
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
    <MudNavLink Href="https://www.zaneco.ph/" Match="NavLinkMatch.All" Target="_blank"
        Icon="@Icons.Material.Filled.Web">Visit our Website</MudNavLink>
    @if (_canViewHangfire)
    {
        <MudNavLink Href="@_hangfireUrl" Match="NavLinkMatch.All" Target="_blank" Icon="@Icons.Material.Filled.Work">Hangfire</MudNavLink>
    }
    <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">Personal</MudText>
    @if (_canViewDashboard)
    {
        @*<MudNavLink Href="/calendar" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.CalendarMonth">Calendar</MudNavLink>*@
        <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard" Href="/dashboard">Dashboard</MudNavLink>
    }
    @if (_canCreateAttendance)
    {
        <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.CameraFront" Href="/employee/timelogs">Time Log-In/Out</MudNavLink>
    }
    
    <MudNavLink Icon="@Icons.Material.Filled.ManageAccounts" Href="/account">Account</MudNavLink>
    <MudNavLink Icon="@Icons.Material.Filled.SecurityUpdateGood" Href="/audit-logs">Logs</MudNavLink>

    <MudText Class="ml-4 my-3" Color="Color.Primary" Typo="Typo.subtitle2">Management</MudText>

    @if (_canViewGroups || _canViewTickets)
    {
        <MudNavGroup Title="Application" Icon="@Icons.Material.Filled.AddBox">
            @if (_canViewGroups)
            {
                <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.Settings" Href="app/groups">Groups</MudNavLink>
            }
            @if (_canViewTickets)
            {
                <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.AirplaneTicket" Href="app/tickets">Tickets</MudNavLink>
            }
        </MudNavGroup>
    }
    @if (_canViewContacts || _canViewSMS)
    {
        <MudNavGroup Title="Messages" Icon="@Icons.Material.Filled.AddBox">
            @if (_canViewContacts)
            {
                <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.ContactPhone" Href="sms/contacts">Contacts</MudNavLink>
            }
            @if (_canViewSMS)
            {
                <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.Message" Href="sms/templates">Templates</MudNavLink>
                <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.Send" Href="sms/outs">Send</MudNavLink>
                <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.Inbox" Href="sms/inbox">Inbox</MudNavLink>
                <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.AppRegistration" Href="sms/agma">AGMA</MudNavLink>
                <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.Outbox" Href="sms/logs">Outbox</MudNavLink>
            }
        </MudNavGroup>
    }
    
    @if (_canViewEmployees || _canViewAttendance || _canViewCalendar || _canViewDocuments || _canViewAppointment)
    {
        <MudNavGroup Icon="@Icons.Material.Filled.AddBox" Title="Human Resource">
            <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.Groups" Href="hr/employees" Disabled=(!_canViewEmployees)>Employees</MudNavLink>
            <MudDivider />
            <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.CalendarViewMonth" Href="hr/calendar">Calendar</MudNavLink>
            <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.Schedule" Href="employee/appointments">Appointments</MudNavLink>
            <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.EventAvailable" Href="employee/attendance">Attendance</MudNavLink>
            <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.CameraFront" Href="employee/timelogs">Time Log-In/Out</MudNavLink>
            <MudDivider />
            <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.DocumentScanner" Href="hr/documents">Documents</MudNavLink>
            <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.ReceiptLong" Href="hr/powerbills">Power Bills</MudNavLink>
        </MudNavGroup>
    }

    @if (_canViewPayroll)
    {
        <MudNavGroup Title="Payroll" Icon="@Icons.Material.Filled.AddBox">
            <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.Settings" Href="payroll/adjustments">Adjustments</MudNavLink>
            <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.ReceiptLong" Href="payroll/contributions">Contributions</MudNavLink>
            <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.LocalPolice" Href="payroll/salaries">Salaries</MudNavLink>
            <MudDivider />
            <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.CalendarViewMonth" Href="payroll/schedules">Schedules</MudNavLink>
            <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.CalendarViewWeek" Href="payroll/scheduledetails">Schedule Details</MudNavLink>
            <MudDivider />
            <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.ManageAccounts" Href="payroll/loans">Employee Loans</MudNavLink>
            <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.ManageAccounts" Href="payroll/employeeadjustments">Employee Adjustments</MudNavLink>
            <MudDivider />
            <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.Payment" Href="payroll">Payroll</MudNavLink>
            <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.Checklist" Href="payroll/payrolladjustments">Payroll Adjustments</MudNavLink>
            <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.Checklist" Href="payroll/employeepayroll">Employee Payroll</MudNavLink>
        </MudNavGroup>
    }

    @if (_canViewAccounting)
    {
        <MudNavGroup Title="Accounting" Icon="@Icons.Material.Filled.AddBox">
            @if (_canViewAccounting)
            {
                <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.Groups" Href="accounting/Accounts">Accounts</MudNavLink>
                <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.Groups" Href="accounting/checks">Checks</MudNavLink>
                <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.PersonSearch" Href="accounting/vouchers">Vouchers</MudNavLink>
                <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.EventAvailable" Href="accounting/journals">Journals</MudNavLink>
                <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.Payment" Href="accounting/trialbalance">Trial Balance</MudNavLink>
            }
        </MudNavGroup>
    }

    @if (_canViewISD)
    {
        <MudNavGroup Title="ISD" Icon="@Icons.Material.Filled.AddBox">
            @if (_canViewISD)
            {
                <MudNavLink Class="fsh-nav-child" Icon="@Icons.Material.Filled.Groups" Href="isd/members">Members</MudNavLink>
            }
        </MudNavGroup>
    }

    @if (_canViewCAD)
    {
        <MudNavGroup Title="CAD" Icon="@Icons.Material.Filled.AddBox">
            @if (_canViewCAD)
            {
                <MudNavLink Href="/cad/areas" Icon="@Icons.Material.Filled.Place" Class="fsh-nav-child">Areas</MudNavLink>
                <MudNavLink Href="/cad/barangays" Icon="@Icons.Material.Filled.Place" Class="fsh-nav-child">Barangays</MudNavLink>
                <MudNavLink Href="/cad/routes" Icon="@Icons.Material.Filled.AltRoute" Class="fsh-nav-child">Routes</MudNavLink>

                <MudNavLink Href="/cad/powerrates" Icon="@Icons.Material.Filled.Power" Class="fsh-nav-child">Power Rates</MudNavLink>
                <MudNavLink Href="/cad/powerconsumptions" Icon="@Icons.Material.Filled.Power" Class="fsh-nav-child">Power Consumptions</MudNavLink>

                <MudNavLink Href="/cad/accounts" Icon="@Icons.Material.Filled.Groups" Class="fsh-nav-child">Accounts</MudNavLink>
                <MudNavLink Href="/cad/ledger" Icon="@Icons.Material.Filled.FormatListBulleted" Class="fsh-nav-child">Ledger</MudNavLink>

                <MudNavLink Href="/cad/remotecollections" Icon="@Icons.Material.Filled.Payment" Class="fsh-nav-child">Remote Collections</MudNavLink>
            }
        </MudNavGroup>
    }

    @if (_canCreateComment || _canViewRating || _canViewSurveys)
    {
        <MudNavGroup Title="Survey" Icon="@Icons.Material.Filled.AddBox">
            @if (_canViewRating)
            {
                <MudNavLink Href="/survey/rates" Icon="@Icons.Material.Filled.StarRate" Class="fsh-nav-child">Rates</MudNavLink>
                <MudNavLink Href="/survey/ratingtemplates" Icon="@Icons.Material.Filled.HotelClass" Class="fsh-nav-child">Templates</MudNavLink>
            }
            @if (_canCreateComment)
            {
                <MudNavLink Href="/survey/comment" Icon="@Icons.Material.Filled.StarHalf" Class="fsh-nav-child">Comment</MudNavLink>
            }
            @if (_canViewSurveys)
            {
                <MudNavLink Href="/survey/ratings" Icon="@Icons.Material.Filled.StarHalf" Class="fsh-nav-child">Surveys</MudNavLink>
            }
        </MudNavGroup>
    }

    @if (_canViewRaffle)
    {
        <MudNavGroup Title="Raffle" Icon="@Icons.Material.Filled.AddBox">
            @if (_canViewRaffle)
            {
                <MudNavLink Href="/raffle/profiles" Icon="@Icons.Material.Filled.Style" Class="fsh-nav-child">Profiles</MudNavLink>
                <MudNavLink Href="/raffle/prizes" Icon="@Icons.Material.Filled.Interests" Class="fsh-nav-child">Prizes</MudNavLink>
                <MudNavLink Href="/raffle/winners" Icon="@Icons.Material.Filled.FamilyRestroom" Class="fsh-nav-child">Winners</MudNavLink>
            }
        </MudNavGroup>
    }

    @if (_canViewBrands || _canViewProducts)
    {
        <MudNavGroup Title="Sandurot" Icon="@Icons.Material.Filled.AddBox">
            <MudNavLink Href="/sandurot/brands" Icon="@Icons.Material.Filled.ShoppingBag" Class="fsh-nav-child" Disabled="!_canViewBrands">
                Brands
            </MudNavLink>
            <MudNavLink Href="/sandurot/products" Icon="@Icons.Material.Filled.ShoppingBag" Class="fsh-nav-child" Disabled="!_canViewProducts">
                Products
            </MudNavLink>
        </MudNavGroup>
    }

    @if (CanViewAdministrationGroup)
    {
        <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">Administration</MudText>
        @if (_canViewUsers)
        {
            <MudNavLink Match="NavLinkMatch.Prefix" Href="/users" Icon="@Icons.Material.Filled.PeopleAlt">Users</MudNavLink>
        }
        @if (_canViewRoles)
        {
            <MudNavLink Href="/roles" Icon="@Icons.Material.Filled.EmojiPeople">Roles</MudNavLink>
        }
        @if(_canViewTenants)
        {
            <MudNavLink Href="/tenants" Icon="@Icons.Material.Filled.GroupWork" Disabled="!_canViewTenants">Tenants</MudNavLink>
        }
    }
</MudNavMenu>