<MudExpansionPanel HideIcon="true">
    <TitleContent>
        <div class="d-flex">
            <MudText Class="mt-1">Table Customization</MudText>
            <MudAvatar Color="Color.Primary" Class="d-flex ml-auto"
                style="width: 30px;height:30px;font-size:small!important">T
            </MudAvatar>
        </div>
    </TitleContent>
    <ChildContent>
        <MudSwitch T="bool" Label="Fixed Header" Color="Color.Info" @oninput="@ToggleFixedHeaderFooterSwitch"
                   @bind-Checked="@IsFixedHeaderFooter" />
        <MudSwitch T="bool" Label="Allow Unsorted" Color="Color.Info" @oninput="@ToggleAllowUnsortedSwitch"
                   @bind-Checked="@IsAllowUnsorted" />

        <MudSwitch T="bool" Label="Dense" Color="Color.Info" @oninput="@ToggleDenseSwitch"
                   @bind-Checked="@IsDense" />
        <MudSwitch T="bool" Label="Striped" Color="Color.Info" @oninput="@ToggleStripedSwitch"
                   @bind-Checked="@IsStriped" />
        <MudSwitch T="bool" Label="Bordered" Color="Color.Info" @oninput="@ToggleBorderedSwitch"
                   @bind-Checked="@HasBorder" />
        <MudSwitch T="bool" Label="Hoverable" Color="Color.Info" @oninput="@ToggleHoverableSwitch"
                   @bind-Checked="@IsHoverable" />

        <MudSwitch T="bool" Label="Multi-Selection" Color="Color.Info" @oninput="@ToggleMultipleSelectionSwitch"
                   @bind-Checked="@IsMultiSelection" />
        <MudSwitch T="bool" Label="Virtualize" Color="Color.Info" @oninput="@ToggleVirtualizeSwitch"
                   @bind-Checked="@IsVirtualize" />
    </ChildContent>
</MudExpansionPanel>