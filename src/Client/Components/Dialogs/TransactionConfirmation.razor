<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon=@TransactionIcon Class="mr-3 mb-n1" />
            @TransactionTitle Confirmation
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Class="ma-5">@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton StartIcon="@Icons.Filled.Cancel" OnClick="Cancel">Cancel</MudButton>
        <MudButton StartIcon=@TransactionIcon Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">@ConfirmText</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = default!;

    [Parameter]
    public string TransactionIcon { get; set; } = @Icons.Material.Filled.Work;

    [Parameter]
    public string TransactionTitle { get; set; } = "Transaction";

    [Parameter]
    public string? ContentText { get; set; }

    [Parameter]
    public string ConfirmText { get; set; } = "Confirm";

    void Submit()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }
    void Cancel() => MudDialog.Cancel();
}